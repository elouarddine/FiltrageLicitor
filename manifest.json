{
  "manifest_version": 3,
  "name": "Filtrage Licitor",
  "version": "1.2",
  "description": "Filtre les annonces sur Licitor selon vos crit√®res.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.licitor.com/*"
  ],
  "action": {
    "default_popup": "view/popup.html",
    "default_icon": {
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.licitor.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
